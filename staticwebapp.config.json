{
  "routes": [
    {
      "route": "/admin/dev-seed",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/devSeedOptionA",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/validateSignupEmail",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/b2cHealth",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/verifyEmailChange",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/dashboard*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "b2c": {
          "registration": {
            "clientId": "YOUR_B2C_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "B2C_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://YOUR_TENANT_NAME.b2clogin.com/YOUR_TENANT_NAME.onmicrosoft.com/B2C_1_signupsignin/v2.0/.well-known/openid-configuration"
            }
          },
          "login": {
            "name": "Email + Password",
            "scopes": ["openid", "profile", "email"]
          }
        }
      }
    }
  },
  "mimeTypes": {
    ".json": "application/json"
  }
}
